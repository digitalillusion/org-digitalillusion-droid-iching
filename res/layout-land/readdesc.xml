<?xml version="1.0" encoding="utf-8"?>
<TabHost
    android:id="@android:id/tabhost"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="31dp"
            android:layout_gravity="top"/>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:id="@+id/layReadDesc"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:baselineAligned="false"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layHexAndButtons"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:baselineAligned="false"
                        android:orientation="vertical">

                        <TableLayout
                            android:id="@+id/tblHexagram"
                            android:layout_width="@dimen/hex_small_width"
                            android:layout_height="@dimen/hex_small_height"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="2dp"
                            android:gravity="center_vertical|center_horizontal">

                            <TableRow
                                android:id="@+id/hexRow6"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/hex_small_row_height"
                                android:layout_weight="1"></TableRow>

                            <TableRow
                                android:id="@+id/hexRow5"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/hex_small_row_height"
                                android:layout_weight="1"></TableRow>

                            <TableRow
                                android:id="@+id/hexRow4"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/hex_small_row_height"
                                android:layout_weight="1"></TableRow>

                            <TableRow
                                android:id="@+id/hexRow3"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/hex_small_row_height"
                                android:layout_weight="1"></TableRow>

                            <TableRow
                                android:id="@+id/hexRow2"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/hex_small_row_height"
                                android:layout_weight="1"></TableRow>

                            <TableRow
                                android:id="@+id/hexRow1"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/hex_small_row_height"
                                android:layout_weight="1"></TableRow>
                        </TableLayout>

                        <LinearLayout
                            android:id="@+id/layButtonsAndChanging"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <!-- Buttons for description, judgement and image -->
                            <Button
                                android:id="@+id/btReadDesc"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="0.33"
                                android:text="@string/read_desc"
                                android:textSize="14dp"/>

                            <Button
                                android:id="@+id/btReadJudge"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.33"
                                android:text="@string/read_judge"
                                android:textSize="14dp"/>

                            <Button
                                android:id="@+id/btReadImage"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.33"
                                android:text="@string/read_image"
                                android:textSize="14dp"/>

                            <!-- Interface for changing lines -->
                            <TextView
                                android:id="@+id/tvChanging"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="10"
                                android:background="@android:color/transparent"
                                android:fadingEdge="vertical"
                                android:focusable="false"
                                android:paddingLeft="5dp"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/text_size_medium"/>

                            <Spinner
                                android:id="@+id/spChanging"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.33"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="@dimen/text_size_small"
                                android:visibility="gone"></Spinner>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layOutput"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="top"
                            android:layout_weight="1"
                            android:baselineAligned="true"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill_horizontal"
                                android:baselineAligned="false"
                                android:orientation="horizontal"
                                android:paddingBottom="5dp"
                                android:paddingLeft="5dp">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvQuestionReadDesc"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/text_size_medium"/>

                                    <TextView
                                        android:id="@+id/tvHexName"
                                        android:layout_width="fill_parent"
                                        android:layout_height="36dp"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textSize="@dimen/text_size_small"
                                        android:textStyle="bold"/>
                                </LinearLayout>
                            </LinearLayout>

                            <EditText
                                android:id="@+id/etOutput"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.33"
                                android:background="@android:color/transparent"
                                android:fadingEdgeLength="20dp"
                                android:focusable="false"
                                android:freezesText="true"
                                android:inputType="textNoSuggestions|textMultiLine"
                                android:paddingLeft="5dp"
                                android:requiresFadingEdge="vertical"
                                android:scrollbarStyle="insideInset"
                                android:scrollbars="vertical"
                                android:textColor="@android:color/white">

                                <requestFocus/>
                            </EditText>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</TabHost>