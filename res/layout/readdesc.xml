<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:id="@+id/layConsult"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:padding="5dp" >

                <LinearLayout
                    android:id="@+id/layHexAndDesc"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.79"
                    android:baselineAligned="false" >

                    <LinearLayout
                        android:id="@+id/layHex"
                        android:layout_width="120px"
                        android:layout_height="120px"
                        android:layout_gravity="center_vertical" >

                        <TableLayout
                            android:id="@+id/tblHexagram"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|center_horizontal" >

                            <TableRow
                                android:id="@+id/hexRow6"
                                android:layout_width="wrap_content"
                                android:layout_height="8px" >
                            </TableRow>

                            <TableRow
                                android:id="@+id/hexRow5"
                                android:layout_width="wrap_content"
                                android:layout_height="8px" >
                            </TableRow>

                            <TableRow
                                android:id="@+id/hexRow4"
                                android:layout_width="wrap_content"
                                android:layout_height="8px" >
                            </TableRow>

                            <TableRow
                                android:id="@+id/hexRow3"
                                android:layout_width="wrap_content"
                                android:layout_height="8px" >
                            </TableRow>

                            <TableRow
                                android:id="@+id/hexRow2"
                                android:layout_width="wrap_content"
                                android:layout_height="8px" >
                            </TableRow>

                            <TableRow
                                android:id="@+id/hexRow1"
                                android:layout_width="wrap_content"
                                android:layout_height="8px" >
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layDesc"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.46"
                        android:orientation="vertical"
                        android:paddingLeft="10dp" >

                        <LinearLayout
                            android:id="@+id/layDescInner"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tvDescTitle"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/etDesc"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="@android:color/black"
                                android:fadingEdge="vertical"
                                android:focusable="false"
                                android:inputType="textMultiLine"
                                android:scrollbarStyle="insideInset"
                                android:scrollbars="vertical"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@android:color/white" android:paddingLeft="5dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layJudgeAndImage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.11"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/layJudge"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/layJudgeInner"
                            android:layout_width="match_parent"
                            android:layout_height="98dp"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tvJudgeTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/read_judge"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/etJudge"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.16"
                                android:background="@android:color/black"
                                android:fadingEdge="vertical"
                                android:focusable="false"
                                android:inputType="textMultiLine"
                                android:scrollbarStyle="insideInset"
                                android:scrollbars="vertical"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@android:color/white" android:paddingLeft="5dp">

                                <requestFocus />
                            </EditText>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layImage"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.82"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/layImageInner"
                            android:layout_width="match_parent"
                            android:layout_height="76dp"
                            android:layout_weight="0.51"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tvImageTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/read_image"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/etImage"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.20"
                                android:background="@android:color/black"
                                android:cursorVisible="true"
                                android:fadingEdge="vertical"
                                android:focusable="false"
                                android:inputType="textMultiLine"
                                android:scrollbarStyle="insideInset"
                                android:scrollbars="vertical"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@android:color/white" android:paddingLeft="5dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

</TabHost>