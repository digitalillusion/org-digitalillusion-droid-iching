<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal" >

    <LinearLayout
        android:id="@+id/layConsult"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <TextView
            android:id="@+id/tvQuestionConsult"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tblHexagram"
        android:layout_width="160dp"
        android:layout_height="109dp"
        android:layout_weight="0.09"
        android:gravity="bottom" >

		<TableRow
            android:id="@+id/hexRow6"
            android:layout_width="fill_parent"
            android:layout_height="15dp">
        </TableRow>
        
        <TableRow
            android:id="@+id/hexRow5"
            android:layout_width="fill_parent" 
            android:layout_height="15dp"> 
        </TableRow>

        <TableRow
            android:id="@+id/hexRow4"
            android:layout_width="fill_parent"
            android:layout_height="15dp">
        </TableRow>

        <TableRow
            android:id="@+id/hexRow3"
            android:layout_width="fill_parent"
            android:layout_height="15dp">
        </TableRow>

        <TableRow
            android:id="@+id/hexRow2"
            android:layout_width="fill_parent"
            android:layout_height="15dp"> 
        </TableRow>

        <TableRow
            android:id="@+id/hexRow1"
            android:layout_width="fill_parent"
            android:layout_height="15dp"> 
        </TableRow>
    </TableLayout>

 	<LinearLayout
 	    android:id="@+id/layInstructions"
 	    android:layout_width="fill_parent"
 	    android:layout_height="wrap_content"
 	    android:layout_gravity="bottom"
 	    android:layout_weight="0.09"
 	    android:gravity="center_vertical|center_horizontal" >
        
        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/consult_tapcoins"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/layCoins"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_weight="0.00"
        android:gravity="fill_vertical|center_horizontal" >

        <ImageView
            android:id="@+id/picCoin01"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_gravity="bottom"
            android:contentDescription="@string/consult_coin_alt"
            android:onClick="onClickGenerateRow" />

        <ImageView
            android:id="@+id/picCoin02"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_gravity="bottom"
            android:contentDescription="@string/consult_coin_alt"
            android:onClick="onClickGenerateRow" />
        
        <ImageView
            android:id="@+id/picCoin03"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_gravity="bottom"
            android:contentDescription="@string/consult_coin_alt"
            android:onClick="onClickGenerateRow" />

     </LinearLayout>

</LinearLayout>