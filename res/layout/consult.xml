<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layConsult"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/tvQuestionConsult"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.45"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/text_size_medium"/>
    </LinearLayout>

    <TableLayout
        android:id="@+id/tblHexagram"
        android:layout_width="@dimen/hex_big_width"
        android:layout_height="@dimen/hex_big_height"
        android:gravity="bottom">

        <TableRow
            android:id="@+id/hexRow6"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/hex_big_row_height"
            android:layout_weight="0.8"
            android:background="@drawable/empty"></TableRow>

        <TableRow
            android:id="@+id/hexRow5"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/hex_big_row_height"
            android:layout_weight="0.8"
            android:background="@drawable/empty"></TableRow>

        <TableRow
            android:id="@+id/hexRow4"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/hex_big_row_height"
            android:layout_weight="0.8"
            android:background="@drawable/empty"></TableRow>

        <TableRow
            android:id="@+id/hexRow3"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/hex_big_row_height"
            android:layout_weight="0.8"
            android:background="@drawable/empty"></TableRow>

        <TableRow
            android:id="@+id/hexRow2"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/hex_big_row_height"
            android:layout_weight="0.8"
            android:background="@drawable/empty"></TableRow>

        <TableRow
            android:id="@+id/hexRow1"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/hex_big_row_height"
            android:layout_weight="0.8"
            android:background="@drawable/empty"></TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/layInstructions"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/consult_tapcoins"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/text_size_small"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layCoins"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/coins_size"
        android:layout_marginBottom="2dp"
        android:layout_weight="0.00"
        android:gravity="fill_vertical|center_horizontal">

        <ImageView
            android:id="@+id/picCoin01"
            android:layout_width="@dimen/coins_size"
            android:layout_height="@dimen/coins_size"
            android:layout_gravity="bottom"
            android:contentDescription="@string/consult_coin_alt"
            android:onClick="onClickGenerateRow"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="0dp"
            android:padding="5dp"/>

        <ImageView
            android:id="@+id/picCoin02"
            android:layout_width="@dimen/coins_size"
            android:layout_height="@dimen/coins_size"
            android:layout_gravity="bottom"
            android:contentDescription="@string/consult_coin_alt"
            android:onClick="onClickGenerateRow"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="0dp"
            android:padding="5dp"/>

        <ImageView
            android:id="@+id/picCoin03"
            android:layout_width="@dimen/coins_size"
            android:layout_height="@dimen/coins_size"
            android:layout_gravity="bottom"
            android:contentDescription="@string/consult_coin_alt"
            android:onClick="onClickGenerateRow"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="0dp"
            android:padding="5dp"/>

    </LinearLayout>

</LinearLayout>